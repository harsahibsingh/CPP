#include<iostream>
using namespace std;

int main()
{
    
    int arr[5]={1,2,3,4,5};
    int *ptr=arr;
    cout<<*(ptr+2)<<endl;
    
    cout<<"--------------------------------------"<<endl;
    
    int arr2[3][2]={{1,2},{3,4},{5,6}};//storing 2D array as 1D.
    
    int *ptr2=(int*)arr2;
    cout<<*(ptr2)<<endl;
    cout<<*(ptr2+1)<<endl;
    cout<<*(ptr2+2)<<endl;
    cout<<*(ptr2+3)<<endl;
    cout<<*(ptr2+4)<<endl;
    cout<<*(ptr2+5)<<endl;
    return 0;
}
