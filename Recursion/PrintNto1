/*

Print N to 1 using recursion.

Ex:

i/p : 4
o/p : 4 3 2 1

Note: n>=1 (i.e user will not input zero or negative number)
*/

#include <iostream>

using namespace std;

void PrintNto1(int n)
{
    
	if(n==0)
	{
		return;
	}
    
    cout<<n<<" ";
    PrintNto1(n-1);

}

int main()
{
	int n;
	
	cout<<"Enter value of N: "<<endl;
	cin>>n;

	cout<<"Numbers from N to 1: "<<endl;
	PrintNto1(n);

	return 0;
}
